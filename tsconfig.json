{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@Types": ["app/javascript/types"],
      "@Utils/*": ["app/javascript/utils/*"],
      "@Components/*": ["app/javascript/components/*"],
      "@Containers/*": ["app/javascript/containers/*"],
      "@App/*": ["app/javascript/*"]
    },
    "noImplicitAny": false, // TODO: Enable this option
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,  // TODO: Enable this option
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false  // TODO: Enable this option
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
